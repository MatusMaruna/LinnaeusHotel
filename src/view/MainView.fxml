<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="420.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MainView">
   <children>
      <VBox fx:id="buttonsContainer" layoutX="76.0" layoutY="70.0">
         <children>
            <Button fx:id="guest" mnemonicParsing="false" onAction="#onGuestManagementClick" prefHeight="40.0" prefWidth="460.0" text="Guest Management" textAlignment="CENTER">
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="reservation" mnemonicParsing="false" onAction="#onReservationManagementClick" prefHeight="40.0" prefWidth="460.0" text="Reservation Management" textAlignment="CENTER">
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="checkIn" mnemonicParsing="false" onAction="#onCheckInClick" prefHeight="40.0" prefWidth="460.0" text="Check In" textAlignment="CENTER">
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="checkOut" mnemonicParsing="false" onAction="#onCheckOutClick" prefHeight="41.0" prefWidth="462.0" text="Check Out" textAlignment="CENTER">
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
      <MenuBar fx:id="menu" layoutY="-2.0" prefHeight="31.0" prefWidth="600.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem fx:id="menuNew" mnemonicParsing="false" text="New" />
              <MenuItem fx:id="menuSearch" mnemonicParsing="false" text="Search" />
                  <MenuItem fx:id="menuSave" mnemonicParsing="false" text="Save" />
                  <MenuItem fx:id="exportDB" mnemonicParsing="false" text="Export Database" />
                  <MenuItem fx:id="importDB" mnemonicParsing="false" text="Import Database" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Options">
            <items>
              <MenuItem fx:id="menuPreferences" mnemonicParsing="false" text="Preferences" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </children>
</AnchorPane>
